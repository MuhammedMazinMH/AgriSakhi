# ========================================
# AGRISAKHI - PRODUCTION ENVIRONMENT VARIABLES
# ========================================

# ✅ REQUIRED FOR PRODUCTION AI
# Get FREE API key: https://huggingface.co/settings/tokens
NEXT_PUBLIC_HF_API_KEY=your_hugging_face_api_key_here

# ✅ REQUIRED FOR SAKHI-AI CHATBOT
# Get FREE API key: https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Use custom AI model URL
# NEXT_PUBLIC_HF_API_URL=https://api-inference.huggingface.co/models/your-model

# ========================================
# DATABASE (Supabase) - REQUIRED
# ========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ========================================
# AUTHENTICATION - OPTIONAL
# ========================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# ========================================
# IMAGE STORAGE (Cloudinary) - REQUIRED
# ========================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ========================================
# SMS & EMAIL - OPTIONAL
# ========================================
# Twilio (phone verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
# Resend (email notifications)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@agrisakhi.app

# ========================================
# ANALYTICS - OPTIONAL
# ========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id

# ========================================
# ERROR TRACKING - OPTIONAL
# ========================================
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ========================================
# PERFORMANCE MONITORING - OPTIONAL
# ========================================
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id

# ========================================
# DEPLOYMENT (Auto-populated by Vercel)
# ========================================
# VERCEL_URL=auto_populated_by_vercel

# ========================================
# PRIORITY SETUP ORDER
# ========================================
# 1. NEXT_PUBLIC_HF_API_KEY (AI detection) - 5 min setup
# 2. NEXT_PUBLIC_SUPABASE_URL & KEY (database) - 10 min setup
# 3. CLOUDINARY credentials (image storage) - 10 min setup
# 4. Everything else (optional, add as needed)
#
# See PRODUCTION_AI_SETUP.md for detailed instructions

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NODE_ENV=development

# Feature Flags
NEXT_PUBLIC_ENABLE_GUEST_MODE=true
NEXT_PUBLIC_MAX_GUEST_DETECTIONS=5
NEXT_PUBLIC_MAX_FREE_DETECTIONS=50

# AI Model Configuration
NEXT_PUBLIC_MODEL_VERSION=v1.0.0
NEXT_PUBLIC_MODEL_CDN_URL=https://cdn.agrisakhi.app/models

# Rate Limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=60000

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key

# Webhook Secrets
WEBHOOK_SECRET=your_webhook_secret

# VAPID Keys (Web Push Notifications)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
